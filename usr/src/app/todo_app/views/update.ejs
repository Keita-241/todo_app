<!DOCTYPE html>
<html>
    <head>
        <meta charset="urf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    </head>
    <body class="px-4 py-5">
        <h1 class="text-secondary text-center">Edit Task</h1>
        <form action="update_done" method="post">
            <input type="hidden" name="id" value="<%= data.id %>">
            <div class="w-50 my-4 mx-auto">
                <label for="title">タイトル</label><br />
                <input type="text" class="w-100" id="title" name="title" placeholder="タイトルを入力してください" value="<%= data.title %>">
            </div>
            <div class="w-50 my-4 mx-auto">
                <label for="content">内容</label><br />
                <textarea class="w-100" id="content" name="content" placeholder="詳細を入力してください" style="height: 100px;"><%= data.content %></textarea>
            </div>
            <% if(typeof errorMessage != 'undefined') { %>
                <ul class="w-50 my-4 mx-auto">
                    <% for (let n in errorMessage) { %>
                    <li class="text-danger">
                        <%= errorMessage[n].msg %>
                    </li>
                    <% } %>
                </ul>
            <% } %>
            <div class="d-flex w-50 mx-auto">
                <a href="/todo_app/list" class="btn btn-outline-secondary btn-lg mx-auto w-25" onclick="history.back()">戻る</a>
                <button class="btn btn-outline-secondary btn-lg mx-auto w-25" type="submit">保存</button>
            </div>
        </form>
    </body>
</html>