<!DOCTYPE html>
<html>
    <head>
        <meta charset="urf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
        <script>
            document.getElementById('show-password').onclick = function() {
                document.getElementById('password').type = 'text'
            }
        </script>
    </head>
    <body class="px-4 py-5">
        <div class="w-75 d-flex justify-content-around mx-auto">
            <div style="width: 80px;"></div>
            <h1 class="text-secondary text-center">Sign up</h1>
            <a href="/users/login" class="btn btn-outline-secondary h-50">Login</a>
        </div>
        <form action="/users/signup_done" method="post">
            <div class="w-50 my-4 mx-auto">
                <label for="name"> Name</label><br />
                <% if(typeof name != 'undefined') { %>
                    <input type="text" class="w-100" id="name" name="name" value="<%= name %>">
                <% } else { %>
                    <input type="text" class="w-100" id="name" name="name">
                <% } %>
            </div>
            <div class="w-50 my-4 mx-auto">
                <label for="email">Email</label><br />
                <% if(typeof email != 'undefined') { %>
                    <input type="text" class="w-100" id="email" name="email" value="<%= email %>">
                <% } else { %>
                    <input type="text" class="w-100" id="email" name="email">
                <% } %>
            </div>
            <div class="w-50 my-4 mx-auto">
                <label for="password">Password</label><br />
                <input type="password" class="w-100" id="password" name="password">
            </div>
            <div class="w-50 my-4 mx-auto">
                <label for="re_password">Password(確認用)</label><br />
                <input type="password" class="w-100" id="password" name="re_password">
            </div>
            <button type="button" id="show-password" class="btn btn-outline-secondary d-block mx-auto">Show Password</button>
            <% if(typeof errorMessage != 'undefined') { %>
                <ul class="w-50 my-4 mx-auto">
                    <% for (let n in errorMessage) { %>
                    <li class="text-danger">
                        <%= errorMessage[n].msg %>
                    </li>
                    <% } %>
                </ul>
            <% } %>
            <div class="w-75 mx-auto mt-5">
                <button class="btn btn-outline-secondary btn-lg d-block mx-auto w-25" type="submit">Sign up</button>
            </div>
        </form>
    </body>
</html>