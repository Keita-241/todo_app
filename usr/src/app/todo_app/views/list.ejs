<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>list</title>
        <link type="text/css" rel="stylesheet" href="stylesheets/PaginateMyTable.css" />
        <script type="text/javascript" src="javascripts/jquery-3.6.0.min.js"></script>
        <script src="javascripts/PaginateMyTable.js"></script>
        <script>
        $(document).ready(function() {
            $(".mytable").paginate({
                rows: 5,          // Set number of rows per page. Default: 5
            });
        });
        </script>
        <style>
            body{
                padding: 20px 50px;
            }
            h1{
                text-align: center;
            }
            table{
                margin: 0 auto;
            }
        </style>
    </head>
    <body>
        <h1>What should I do !?</h1>
        <table class="mytable" border="bold">
            <thead>
            <tr>
                <th>id</th>
                <th>title</th>
                <th>content</th>
                <th>created_at</th>
            </tr>
            </thead>
            <% for (row of list) { %>
            <tr>
                <td><%= row.id %></td>
                <td><%= row.title %></td>
                <td><%= row.content %></td>
                <% const created_at = String(row.created_at).split(' GMT').shift() %>
                <td><%= created_at %></td>
            </tr>
            <% } %>
        </table>
    </body>
</html>